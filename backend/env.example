# Database
# Формат: postgresql://user:password@host:port/database
# Примеры:
# - Локальный PostgreSQL: postgresql://postgres:postgres@localhost:5432/minto_db
# - Supabase: postgresql://user:password@db.xxx.supabase.co:5432/postgres
# - Neon: postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb
DATABASE_URL="postgresql://user:password@localhost:5432/minto_db"

# Telegram
TELEGRAM_BOT_TOKEN="your_telegram_bot_token"

# Telegram webhook (для production, избегает конфликтов long polling)
# Если true - используется webhook вместо polling
TELEGRAM_USE_WEBHOOK="false"
# URL для webhook (нужен только если TELEGRAM_USE_WEBHOOK=true)
# Формат: https://your-domain.com/api/telegram/webhook
TELEGRAM_WEBHOOK_URL=""

# OpenAI
OPENAI_API_KEY="your_openai_api_key"

# JWT
JWT_SECRET="your_jwt_secret_key_min_32_chars"

# Application
PORT=3000
NODE_ENV=development

# TMA URL (для генерации WebApp ссылок)
TMA_URL="https://your-tma-domain.com"

